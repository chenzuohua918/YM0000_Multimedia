<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/item_height"
    android:layout_height="match_parent"
    android:background="@drawable/item_selector" >

    <TextView
        android:id="@+id/item_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_number_margin_left"
        android:layout_marginTop="@dimen/item_number_margin_left"
        android:textSize="@dimen/item_number_text_size" />

    <TextView
        android:id="@+id/item_frequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="@dimen/item_frequency_text_size" />

</RelativeLayout>