<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        style="@style/BtFragmentLayout" >

        <TextView
            android:id="@+id/tv_search_text"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:background="@color/ym_bt_edit_bg"
            android:ellipsize="start"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:singleLine="true"
            android:textSize="@dimen/ym_bt_norm_text_normal"
            android:visibility="visible" />

        <ListView
            android:id="@+id/lv_contacts_list"
            style="@style/BtListViewStyle"
            android:layout_below="@id/tv_search_text"
            android:layout_above="@+id/ll_bottom_menu_bar" />

        <LinearLayout
            android:id="@+id/ll_bottom_menu_bar"
            style="@style/BtBottomBarLayout" >

            <ImageButton
                style="@style/BtGrayBlueKeyBg"
                android:id="@+id/ym_contacts_synchro"
                android:layout_weight="1"
                android:src="@drawable/ym_synchro" />
            <ImageButton
                style="@style/BtGrayBlueKeyBg"
                android:id="@+id/ym_contacts_search"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:src="@drawable/ym_search" />
            <ImageButton
                style="@style/BtGreenKeyBg"
                android:id="@+id/ym_contacts_dial"
                android:layout_weight="1"
                android:src="@drawable/ym_dial" />

        </LinearLayout>


    </RelativeLayout>

    <!--搜索键盘-->
    <LinearLayout
        android:id="@+id/ll_search_keypad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/ym_bt_search_border_gap"
        android:background="@color/ym_bt_search_bg"
        android:orientation="vertical"
        android:clickable="true"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/keypad_row_0"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ym_bt_search_keypad_item_height"
            android:layout_weight="1"
            android:visibility="gone"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_key_1"
                style="@style/BtSearchKeyBtn"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btn_key_2"
                style="@style/BtSearchKeyBtn"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btn_key_3"
                style="@style/BtSearchKeyBtn"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btn_key_4"
                style="@style/BtSearchKeyBtn"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_key_5"
                style="@style/BtSearchKeyBtn"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btn_key_6"
                style="@style/BtSearchKeyBtn"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btn_key_7"
                style="@style/BtSearchKeyBtn"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btn_key_8"
                style="@style/BtSearchKeyBtn"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btn_key_9"
                style="@style/BtSearchKeyBtn"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btn_key_0"
                style="@style/BtSearchKeyBtn"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/keypad_row_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ym_bt_search_keypad_item_height"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_key_q"
                style="@style/BtSearchKeyBtn"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btn_key_w"
                style="@style/BtSearchKeyBtn"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btn_key_e"
                style="@style/BtSearchKeyBtn"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btn_key_r"
                style="@style/BtSearchKeyBtn"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btn_key_t"
                style="@style/BtSearchKeyBtn"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btn_key_y"
                style="@style/BtSearchKeyBtn"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btn_key_u"
                style="@style/BtSearchKeyBtn"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btn_key_i"
                style="@style/BtSearchKeyBtn"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btn_key_o"
                style="@style/BtSearchKeyBtn"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btn_key_p"
                style="@style/BtSearchKeyBtn"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/keypad_row_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ym_bt_search_keypad_item_height"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/ym_bt_search_key_offset"
            android:paddingRight="@dimen/ym_bt_search_key_offset" >

            <Button
                android:id="@+id/btn_key_a"
                style="@style/BtSearchKeyBtn"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_key_s"
                style="@style/BtSearchKeyBtn"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_key_d"
                style="@style/BtSearchKeyBtn"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_key_f"
                style="@style/BtSearchKeyBtn"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_key_g"
                style="@style/BtSearchKeyBtn"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_key_h"
                style="@style/BtSearchKeyBtn"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_key_j"
                style="@style/BtSearchKeyBtn"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_key_k"
                style="@style/BtSearchKeyBtn"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_key_l"
                style="@style/BtSearchKeyBtn"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/keypad_row_3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ym_bt_search_keypad_item_height"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/btn_key_shift"
                style="@style/BtSearchKeyImg"
                android:layout_weight="@dimen/ym_bt_search_keypad_weight_middle"
                android:src="@drawable/ym_bt_search_shift" />

            <Button
                android:id="@+id/btn_key_z"
                style="@style/BtSearchKeyBtn"
                android:layout_weight="@dimen/ym_bt_search_keypad_weight_small" />

            <Button
                android:id="@+id/btn_key_x"
                style="@style/BtSearchKeyBtn"
                android:layout_weight="@dimen/ym_bt_search_keypad_weight_small" />

            <Button
                android:id="@+id/btn_key_c"
                style="@style/BtSearchKeyBtn"
                android:layout_weight="@dimen/ym_bt_search_keypad_weight_small" />

            <Button
                android:id="@+id/btn_key_v"
                style="@style/BtSearchKeyBtn"
                android:layout_weight="@dimen/ym_bt_search_keypad_weight_small" />

            <Button
                android:id="@+id/btn_key_b"
                style="@style/BtSearchKeyBtn"
                android:layout_weight="@dimen/ym_bt_search_keypad_weight_small" />

            <Button
                android:id="@+id/btn_key_n"
                style="@style/BtSearchKeyBtn"
                android:layout_weight="@dimen/ym_bt_search_keypad_weight_small" />

            <Button
                android:id="@+id/btn_key_m"
                style="@style/BtSearchKeyBtn"
                android:layout_weight="@dimen/ym_bt_search_keypad_weight_small" />

            <ImageButton
                android:id="@+id/btn_key_del"
                style="@style/BtSearchKeyImg"
                android:layout_weight="@dimen/ym_bt_search_keypad_weight_middle"
                android:src="@drawable/ym_bt_search_backspace" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/keypad_row_4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ym_bt_search_keypad_item_height"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_key_num_hide"
                style="@style/BtSearchKeyBtn"
                android:layout_weight="@dimen/ym_bt_search_keypad_weight_middle" />

            <Button
                android:id="@+id/btn_key_comma"
                style="@style/BtSearchKeyBtn"
                android:layout_weight="@dimen/ym_bt_search_keypad_weight_small" />

            <ImageButton
                android:id="@+id/btn_key_space"
                style="@style/BtGrayKeyBg"
                android:layout_weight="@dimen/ym_bt_search_keypad_weight_big"
                android:src="@drawable/ym_bt_search_space" />

            <Button
                android:id="@+id/btn_key_period"
                style="@style/BtSearchKeyBtn"
                android:layout_weight="@dimen/ym_bt_search_keypad_weight_small" />

            <ImageButton
                android:id="@+id/btn_key_hide"
                style="@style/BtSearchKeyImg"
                android:layout_weight="@dimen/ym_bt_search_keypad_weight_middle"
                android:src="@drawable/ym_bt_search_hide" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>