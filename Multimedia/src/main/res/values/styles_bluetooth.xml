<resources>

    <!-- Base application theme. -->
    <!-- <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar"> </style> -->

    <!-- Activity theme -->
    <style name="ActivityTheme" parent="android:Theme.Wallpaper.NoTitleBar">
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="dialog" parent="android:Theme.Dialog"></style>

    <style name="DialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:windowIsFloating">true</item>-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--红色按键背景-->
    <style name="BtRedKeyBg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/ym_bt_dial_key_gap</item>
        <item name="android:background">@drawable/ym_bt_bg_red_selector</item>
    </style>

    <!--绿色按键背景-->
    <style name="BtGreenKeyBg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/ym_bt_dial_key_gap</item>
        <item name="android:background">@drawable/ym_bt_bg_green_selector</item>
    </style>

    <!--蓝色按键背景-->
    <style name="BtBlueKeyBg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/ym_bt_dial_key_gap</item>
        <item name="android:background">@drawable/ym_bt_bg_blue_selector</item>
    </style>

    <!--灰色按键背景(搜索按键)-->
    <style name="BtGrayKeyBg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/ym_bt_search_key_gap</item>
        <item name="android:background">@drawable/ym_bt_bg_gray_selector</item>
    </style>

    <!--蓝灰色按键背景(搜索图标按键)-->
    <style name="BtGrayBlueKeyBg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/ym_bt_dial_key_gap</item>
        <item name="android:background">@drawable/ym_bt_bg_gray_blue_selector</item>
    </style>

    <!--菜单按键背景-->
    <style name="BtMenuKeyBg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:paddingTop">@dimen/ym_bt_menu_text_padding_top</item>
        <item name="android:layout_margin">@dimen/ym_bt_menu_gap</item>
        <item name="android:textSize">@dimen/ym_bt_menu_text_size</item>
        <item name="android:textColor">@color/ym_bt_white</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!--拨号文字按键-->
    <style name="BtDialKeyBtn" parent="@style/BtGrayBlueKeyBg">
        <item name="android:textSize">@dimen/ym_bt_dial_text_size</item>
        <item name="android:textColor">@color/ym_bt_white</item>
    </style>

    <!--搜索图片按键-->
    <style name="BtSearchKeyImg" parent="@style/BtGrayBlueKeyBg">
        <item name="android:layout_margin">@dimen/ym_bt_search_key_gap</item>
    </style>

    <!--搜索文字按键-->
    <style name="BtSearchKeyBtn" parent="@style/BtGrayKeyBg">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/ym_bt_white</item>
    </style>

    <!--对话框文字按键-->
    <style name="BtDialogKeyBtn" parent="@style/BtBlueKeyBg">
        <item name="android:layout_margin">@dimen/ym_bt_dialog_button_gap</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">@dimen/ym_bt_norm_text_normal</item>
        <item name="android:textColor">@color/ym_bt_white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--fragment功能按键布局-->
    <style name="BtBottomBarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ym_bt_func_button_layout_height</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!--fragment布局-->
    <style name="BtFragmentLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/ym_bt_menu_width</item>
        <item name="android:padding">@dimen/ym_bt_fragment_border_gap</item>
        <item name="android:background">@color/ym_bt_main_bg</item>
    </style>

    <!--对话弹框布局-->
    <style name="BtDialogLayout">
        <item name="android:layout_width">@dimen/ym_bt_dialog_width</item>
        <item name="android:layout_height">@dimen/ym_bt_dialog_height</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@color/ym_bt_dialog_bg</item>
    </style>

    <!--加载弹框布局-->
    <style name="BtProgressDialogLayout">
        <item name="android:layout_width">@dimen/ym_bt_progress_dialog_width</item>
        <item name="android:layout_height">@dimen/ym_bt_progress_dialog_height</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@color/ym_bt_dialog_bg</item>
    </style>

    <!--蓝牙设置单元条目布局-->
    <style name="BtSettingsItemLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ym_bt_settings_item_height</item>
        <item name="android:layout_margin">@dimen/ym_bt_normal_gap</item>
    </style>

    <!--列表样式-->
    <style name="BtListViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:divider">@color/ym_bt_dividing_line</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:fastScrollEnabled">false</item>
        <item name="android:focusable">true</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:listSelector">@color/ym_bt_item_bg_normal</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarFadeDuration">-1</item>
        <item name="android:scrollbarStyle">outsideInset</item>
        <item name="android:scrollbarThumbVertical">@drawable/ym_bt_scrollbar_thumb</item>
        <item name="android:scrollbarTrackVertical">@drawable/ym_bt_scrollbar_track</item>
        <item name="android:scrollbars">none</item>
        <item name="android:verticalScrollbarPosition">left</item>
    </style>
</resources>
